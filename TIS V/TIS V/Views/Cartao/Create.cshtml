@model TISV.Models.Cartao

@{ 

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cartao</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.jogo, htmlAttributes: new { @class = "control-label" })

                    @Html.DropDownListFor(model => model.jogo, new SelectList(ViewBag.Jogo, "id", "mandante"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.jogo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.jogador, htmlAttributes: new { @class = "control-label" })

                    @Html.DropDownListFor(model => model.jogador, new SelectList(ViewBag.Jogador, "id", "nome"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.jogador, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.cartao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.cartao, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cartao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
